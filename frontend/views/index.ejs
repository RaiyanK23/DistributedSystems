<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href='https://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet'>
    <style>
    body {
        font-family: 'Quicksand';font-size: 22px;
    }
    </style>
  </head>
  <body>
    <nav>
        <div class="navbar">
            <a class="logo" href="index.html">Stocks</a>
            <div class="search-container">
                <input type="text"
                placeholder="Search"
                id="search-input">
                <button id="search-button">Search</button>
            </div>
        </div>
    </nav>
    <main id="stock-container">
        <div class="stock-card">
            <h1 class="stock-name">ALPHABET</h1>
            <h2 id="price"><b>Price: </b>6000</h2>
            <h2><b>MarketCap: </b>20000</h2>
            <h2><b>PERatio: </b>2</h2>
            <h2><b>MarketHigh: </b>700</h2>
            <h2><b>MarketLow: </b>680</h2>
            <h2><b>High52: </b>800</h2>
            <h2><b>Low52: </b>400</h2>
        </div>
    </main>
    <script>
        document.getElementById('search-button').addEventListener('click', function() {
        var stockName = document.getElementById('search-input').value;

        // Make an AJAX request to your server using fetch
        fetch('/api/stock?name=' + stockName)
            .then(function(response) {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(function(data) {
                displayStockDetails(data);
            })
            .catch(function(error) {
                console.error('Fetch error:', error);
            });
    });

    function displayStockDetails(stock) {
        var stockDetailsContainer = document.getElementById('stock-container');
        stockDetailsContainer.innerHTML = `
            <div class="stock-card">
                <h1 class="stock-name">${stock.StockName}</h1>
                <h2><b>Price: </b>${stock.Price}</h2>
                <h2><b>MarketCap: </b>${stock.MarketCap}</h2>
                <h2><b>PERatio: </b>${stock.PERatio}</h2>
                <h2><b>MarketHigh: </b>${stock.MarketHigh}</h2>
                <h2><b>MarketLow: </b>${stock.MarketLow}</h2>
                <h2><b>High52: </b>${stock.High52}</h2>
                <h2><b>Low52: </b>${stock.Low52}</h2>
            </div>
        `;
    }
    </script>
  </body>
</html>